{
    "name": "create-ev0-app",
    "version": "0.1.0",
    "description": "The best CLI for creating, building, and deploying your Next.js apps",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/itsdrvgo/create-ev0-app.git",
        "directory": "apps/cli"
    },
    "keywords": [
        "cli",
        "ev0",
        "nextjs",
        "create-next-app",
        "next",
        "react",
        "react-framework",
        "reactjs",
        "typescript",
        "t3-app",
        "t3",
        "tailwindcss",
        "drizzle",
        "prisma",
        "supabase",
        "vercel"
    ],
    "type": "module",
    "exports": "./dist/index.js",
    "bin": {
        "create-ev0-app": "./dist/index.js"
    },
    "files": [
        "dist",
        "template",
        "LICENSE",
        "README.md",
        "package.json"
    ],
    "engines": {
        "node": ">=18.17.0"
    },
    "author": {
        "name": "itsdrvgo",
        "url": "https://itsdrvgo.me/"
    },
    "scripts": {
        "dev": "bun run src/index.ts",
        "build": "bun run build.ts",
        "lint": "eslint . --ext .ts",
        "lint:fix": "bun run lint --fix",
        "release": "changeset version",
        "pub:beta": "bun run build && npm publish --tag beta",
        "pub:next": "bun run build && npm publish --tag next",
        "pub:release": "bun run build && npm publish"
    },
    "dependencies": {
        "commander": "^12.0.0",
        "execa": "7.1.1",
        "gradient-string": "^2.0.2",
        "inquirer": "^9.2.21",
        "loading-cli": "^1.1.2",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
        "@types/bun": "latest",
        "@types/gradient-string": "^1.1.6",
        "@types/inquirer": "^9.0.7",
        "@typescript-eslint/eslint-plugin": "^7.9.0",
        "@typescript-eslint/parser": "^7.9.0",
        "eslint": "8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-unused-imports": "^3.2.0",
        "prettier": "^3.2.5",
        "typescript": "^5.4.5"
    },
    "peerDependencies": {
        "typescript": "^5.0.0"
    }
}
